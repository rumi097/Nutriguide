# Backend Production Environment Variables
# Copy these to Render Environment Variables

# Server Configuration
PORT=5002
NODE_ENV=production

# MongoDB Atlas Connection
# Get this from MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nutriguide
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Frontend URL (Your Render Static Site URL)
FRONTEND_URL=https://your-frontend-app.onrender.com

# ML Service URL (Your Render ML Service URL)
ML_SERVICE_URL=https://your-ml-service.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
